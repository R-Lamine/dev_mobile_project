<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.e2507235.tp_list_etudiant_2.Main2Activity"
    android:id="@+id/activity2">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ajouter"
        android:id="@+id/ajouter"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="41dp"
        android:layout_marginStart="41dp"
        android:layout_marginBottom="79dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Annuler"
        android:id="@+id/annuler"
        android:layout_alignBottom="@+id/ajouter"
        android:layout_toRightOf="@+id/ajouter"
        android:layout_toEndOf="@+id/ajouter"
        android:layout_marginLeft="37dp"
        android:layout_marginStart="37dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="nom"
        android:id="@+id/nom"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="37dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="info"
        android:id="@+id/inf"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/nom"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="math"
        android:id="@+id/math"
        android:layout_marginTop="74dp"
        android:layout_below="@+id/inf"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nom1"
        android:layout_above="@+id/inf"
        android:layout_alignRight="@+id/info1"
        android:layout_alignEnd="@+id/info1"
        android:layout_alignLeft="@+id/info1"
        android:layout_alignStart="@+id/info1" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/info1"
        android:layout_above="@+id/math"
        android:layout_alignRight="@+id/annuler"
        android:layout_alignEnd="@+id/annuler"
        android:layout_toRightOf="@+id/math1"
        android:layout_toEndOf="@+id/math1" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/math1"
        android:layout_alignBottom="@+id/math"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
